{
  "apps": [{
    "name": "shurl-worker",
    "script": "./src/server.js",
    "node_args": "--harmony",
    "watch": ["src"],
    "watch_options": {
      "usePolling": true
    },
    "ignore_watch": [".git", "node_modules", ".vscode"],
    "interpreter": "node_modules/.bin/babel-node",
    "exec_mode": "fork",
    "autorestart": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "env": {
      "NODE_ENV": "development"
    },
    "env_production": {
      "NODE_ENV": "production"
    }
  }]
}
